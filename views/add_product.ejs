<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
        background-color: darkcyan;
      }
      h1 {
        background-color: cornsilk;
        height: 20vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      form {
        background-color: cornsilk;
        padding: 15px;
        margin: 10px;
        width: 45%;
        border-radius: 10px;
      }

      .aligning {
        display: flex;
      }

      .display {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 15px;
        margin: 10px;
        width: 50vh;
        height: 50vh;
        border-radius: 10px;
      }
    </style>

    <!-- <script src="./javascript/image_base_64.js" type="text/javascript"></script>  -->

    <script>
      function readURL(input) {
        console.log(typeof input);
        console.log(input.files[0]);
        console.log("function is called");

        if (input.files && input.files[0]) {
          console.log("inside function");
          var file = input.files[0];
          var reader = new FileReader();

          reader.onload = function (e) {
            var image_as_text = e.target.result;

            let n = 23;
            image_as_text = image_as_text.slice(n);

            document.getElementById("base").value = image_as_text;
            // document.getElementById('display_image').src=e.target.result;
          };
          console.log(reader.readAsDataURL(file));
        }
      }
    </script>
    <%- include ('partials/navbar.ejs') %>
    <div class="aligning">
      <form method="POST" action="/api/create">
        <div class="form-group">
          <label for="name"> Name </label>
          <input type="text" name="name" class="form-control" />
        </div>

        <br />

        <div class="form-group">
          <label for="type">Type</label>
          <select id="type" class="form-control" name="type">
            <option selected>Poster</option>
            <option>Sticker</option>
          </select>
        </div>

        <br />
        <div class="form-group">
          <label for="anime"> Anime </label>
          <input type="text" name="anime" class="form-control" />
        </div>
        <br />
        <div class="form-group">
          <label for="description"> Description </label>
          <input type="text" name="description" class="form-control" />
        </div>
        <br />
        <div class="form-group">
          <label for="price"> Price </label>
          <input type="text" name="price" class="form-control" />
        </div>
        <div class="form-group">
          <label for="image">Select File</label>
          <input
            type="file"
            class="form-control-file"
            id="imagefile"
            src="#"
            name="image"
            onchange="readURL(this);"
          />
        </div>
        <div class="form-group">
          <label for="imagebase"> Base 64 of Image </label>
          <input type="text" name="imagebase" class="form-control" id="base" />
        </div>
        <input type="submit" class="btn btn-primary" />
      </form>
      <!-- <div class="display">
        <img id="display_image" src="#" alt="your image" />
      </div> -->
    </div>
  </body>
</html>
